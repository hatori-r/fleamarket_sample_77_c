<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Introduce</th>
      <th>Status</th>
      <th>Shipping fee</th>
      <th>Shipping area</th>
      <th>Date</th>
      <th>Price introduce</th>
      <th>User</th>
      <th>Category</th>
      <th>Brand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.introduce %></td>
        <td><%= item.status %></td>
        <td><%= item.shipping_fee %></td>
        <td><%= item.shipping_area %></td>
        <td><%= item.date %></td>
        <td><%= item.price_introduce %></td>
        <td><%= item.user %></td>
        <td><%= item.category %></td>
        <td><%= item.brand %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
