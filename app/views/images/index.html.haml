%p#notice= notice
%h1 Images
%table
  %thead
    %tr
      %th Item
      %th Image
      %th{:colspan => "3"}
  %tbody
    - @images.each do |image|
      %tr
        %td= image.item
        %td= image.image
        %td= link_to 'Show', image
        %td= link_to 'Edit', edit_image_path(image)
        %td= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Image', new_image_path
