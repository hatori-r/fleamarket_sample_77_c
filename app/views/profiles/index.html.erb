<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Family name</th>
      <th>First name</th>
      <th>Family name kana</th>
      <th>First name kana</th>
      <th>Birthday</th>
      <th>Image</th>
      <th>Introduction</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.family_name %></td>
        <td><%= profile.first_name %></td>
        <td><%= profile.family_name_kana %></td>
        <td><%= profile.first_name_kana %></td>
        <td><%= profile.birthday %></td>
        <td><%= profile.image %></td>
        <td><%= profile.introduction %></td>
        <td><%= profile.user %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

