.background
  .mypage
    
    .mypage__card
      .mypage__card__user-name
        -# = current_user.nickname
        %span
          さんのマイページ 

      .mypage__card__new
        .mypage__card__new__title
          クレジットカード情報入力
        .mypage__card__new__box
          = form_with url:credits_path, method: :post, class: "details", id: "inputForm", local: true do |f|
            .mypage__card__new__box__format
              .mypage__card__new__box__format__number
                カード番号
                .number
                  = f.text_field "card_number", class: "mypage__card__new__box__format__number__default", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
              .card_image
                = image_tag 'visa.png', class:'visa'
                = image_tag 'mastercard.png', class:'master'
                = image_tag 'jcb.png', class:'jcb'
                = image_tag 'americanExpress.png', class:'amex'
                = image_tag 'dinersClub.png', class: 'diners'
                = image_tag 'discover.png', class: 'discover'
  
              .mypage__card__new__box__format__group
                %label 有効期限
                %br
                = f.select :exp_month, id: "exp_month", name: "exp_month" do
                  %option{value: ""} --
                  %option{value: "1"}01
                  %option{value: "2"}02
                  %option{value: "3"}03
                  %option{value: "4"}04
                  %option{value: "5"}05
                  %option{value: "6"}06
                  %option{value: "7"}07
                  %option{value: "8"}08
                  %option{value: "9"}09
                  %option{value: "10"}10
                  %option{value: "11"}11
                  %option{value: "12"}12
                %span 月/
                = f.select :exp_year, id:"exp_year",name: "exp_year"  do
                  %option{value: ""} --
                  %option{value: "2020"}20
                  %option{value: "2021"}21
                  %option{value: "2022"}22
                  %option{value: "2023"}23
                  %option{value: "2024"}24
                  %option{value: "2025"}25
                  %option{value: "2026"}26
                  %option{value: "2027"}27
                  %option{value: "2028"}28
                  %option{value: "2029"}29
                %span 年
                %br
              .mypage__card__new__box__format__security
                セキュリティコード
                = f.text_field  "payment_card_cvc", type: 'text', class: 'mypage__card__new__box__format__security__code', id: "payment_card_cvc", maxlength: "4", placeholder: 'カード背面4桁もしくは3桁の番号' 
              .mypage__card__new__box__format__fom
                = f.submit 'クレジットカード登録', class: "mypage__card__new__box__format__fom__btn", id: 'token_submit'
  